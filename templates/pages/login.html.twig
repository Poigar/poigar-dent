{% include 'header.html.twig' %}

{% include 'navbars/navbar_admin.html.twig' %}

<div class="wrapper__main flex--centered tall">
    <div class="login-box">
        
        <img id="js-login-box-logo" class="logo" src="{{ asset('img/tooth.svg') }}">

        <form>

            <div class="form-group">
                <label for="login_username">Username</label>
                <input type="text" class="form-control" id="login_username" aria-describedby="username" placeholder="Enter username">
            </div>

            <div class="form-group">
                <label for="login_password">Password</label>
                <input type="password" class="form-control" id="login_password" placeholder="Enter password">
            </div>

            <button type="submit" class="btn btn-primary">Login</button>

        </form>

    </div>
</div>

<script>
    $('#login_username').focusin(function(){
        $('#js-login-box-logo').addClass('logo--scaled');
    });
    $('#login_username').focusout(function(){
        $('#js-login-box-logo').removeClass('logo--scaled');
    });

    $('#login_password').focusin(function(){
        $('#js-login-box-logo').addClass('logo--scaled');
    });
    $('#login_password').focusout(function(){
        $('#js-login-box-logo').removeClass('logo--scaled');
    });
</script>