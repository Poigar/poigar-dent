{% include 'header.html.twig' %}
{% include 'navbars/navbar.html.twig' %}

<div class="wrapper__main margin__under-navbar">
    <div class="container">
        <div class="card mb-5">
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th width="10%" style="" scope="col">Time</th>
                            <th width="90%" style="" scope="col">Appointment</th>
                        </tr>
                    </thead>
                    <tbody>

                        {% for key in range(0,23) %}
                            
                            <tr class="employee">
                                <th scope="row">{% if(key<10) %}0{% endif %}{{ key }}:00</th>
                                <td scope="row"> Random thing </td>
                            </tr>
                            
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
